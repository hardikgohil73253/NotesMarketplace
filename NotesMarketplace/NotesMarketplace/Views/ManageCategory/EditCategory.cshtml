@model NotesMarketplace.Models.AddCategory
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/AdminNavbar.cshtml";
}

<!-- Add Catagory -->
@using (Html.BeginForm("AddCategory", "ManageCategory", FormMethod.Post, new { @class = "add-user-data" }))
{


    <section id="user-data" class="user-profile content-box-md">
        <div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="heading">
                            <h3>Add Category</h3>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">
                                <!-- Catagory Name -->
                                <div class="form-group">
                                    <label class="classlable">Category Name*</label>
                                    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control classinput", @placeholder = "category name" })
                                    @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "form-error" })

                                </div>

                            </div>
                        </div>
                        <!-- Description -->
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <div class="textarea-input">
                                        <label class="classlable" for="classinput">Description *</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control classinput", @placeholder = "description" })
                                        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "form-error" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-2 col-sm-3">
                                <button type="submit" class="btn text-uppercase text-center" id="idbtn"><b>submit</b></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Add Catagory End -->

}

